{
  "name": "weewx-wdc",
  "version": "1.3.1",
  "description": "Weather Data Center skin for weewx.",
  "author": "David Baetge <david.baetge@gmail.com>",
  "license": "MIT",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "sideEffects": [
    ".scss"
  ],
  "dependencies": {
    "@carbon/colors": "10.34.0",
    "@carbon/icons-react": "10.22.0",
    "@carbon/themes": "10.40.0",
    "@carbon/type": "10.39.0",
    "@nivo/bar": "^0.79.1",
    "@nivo/calendar": "^0.79.1",
    "@nivo/core": "^0.79.0",
    "@nivo/line": "^0.79.1",
    "@react-hook/media-query": "^1.1.1",
    "carbon-components": "10.25.0",
    "carbon-components-react": "7.50.0",
    "carbon-data-table-state-manager": "^1.0.3",
    "carbon-icons": "7.0.7",
    "d3-scale": "^4.0.2",
    "dayjs": "^1.11.3",
    "prop-types": "^15.8.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-full-screen": "^1.1.1",
    "react-plotly.js": "^2.5.1",
    "use-debounce": "^8.0.1",
    "workbox-cacheable-response": "^6.5.3",
    "workbox-expiration": "^6.5.3",
    "workbox-recipes": "^6.5.3",
    "workbox-routing": "^6.5.3",
    "workbox-strategies": "^6.5.3"
  },
  "devDependencies": {
    "@types/carbon-components-react": "^7.46.1",
    "@types/carbon__icons-react": "^10.24.0",
    "@types/d3-scale": "^4.0.2",
    "@types/plotly.js": "^2.12.1",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@types/react-plotly.js": "^2.5.1",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "mini-css-extract-plugin": "^2.6.1",
    "postcss-loader": "^7.0.1",
    "prettier": "2.6.2",
    "process": "^0.11.10",
    "sass": "^1.53.0",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.6.4",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0"
  },
  "scripts": {
    "cleanOutput": "rm -f skins/weewx-wdc/dist/* && rm -f skins/weewx-wdc/service-worker.js",
    "lint": "eslint --ext .ts,.tsx,.js ./skins/weewx-wdc/src",
    "dev": "yarn run cleanOutput &&  NODE_ENV=development webpack --watch",
    "build": "yarn run cleanOutput && NODE_ENV=production webpack && mv skins/weewx-wdc/dist/service-worker.js skins/weewx-wdc/service-worker.js",
    "deploy:local": "sudo rsync -vua ./skins/weewx-wdc/ /etc/weewx/skins/weewx-wdc/ && sudo cp -r ./bin/user/. /usr/share/weewx/user/ && sudo systemctl restart weewx && sudo /usr/share/weewx/wee_reports",
    "serve:local": "docker run -it --rm -d -p 8080:80 --name web -v /var/www/html/weewx:/usr/share/nginx/html nginx",
    "deploy:pi": "yarn run build && sudo rsync -vua ./bin/ pi@weewx:/home/pi/bin && sudo rsync -vua --exclude 'weewx-wdc/skin.conf' ./skins/ pi@weewx:/home/pi/skins"
  }
}
